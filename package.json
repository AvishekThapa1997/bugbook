{
  "name": "bugbook",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "sh ./deploy.sh && next build",
    "start": "next start",
    "lint": "next lint --max-warnings 0 ./src",
    "format": "prettier ./src --write ",
    "prepare": "husky && husky install",
    "supabase:init": "supabase init --workdir=./src/lib/",
    "supabase:start": "supabase start --workdir=./src/lib/",
    "supabase:stop": "supabase stop --workdir=./src/lib/",
    "supabase:gen-types": "supabase gen types --lang=typescript --local > ./src/lib/supabase/database/database.types.ts --workdir=./src/lib/",
    "migration": "cross-env-shell \"supabase migration new $npm_config_name\" --workdir=./src/lib/",
    "migrate": "supabase migration up --workdir=./src/lib/"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.45.1",
    "@tanstack/react-query": "^5.51.11",
    "@tanstack/react-query-devtools": "^5.50.1",
    "@tiptap/extension-placeholder": "^2.4.0",
    "@tiptap/pm": "^2.5.8",
    "@tiptap/react": "^2.5.8",
    "@tiptap/starter-kit": "^2.5.8",
    "arctic": "^1.9.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.414.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "node-appwrite": "^13.0.0",
    "react": "^18",
    "react-cropper": "^2.3.3",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "react-image-file-resizer": "^0.4.8",
    "react-intersection-observer": "^9.10.3",
    "react-linkify-it": "^1.0.8",
    "server-only": "^0.0.1",
    "sharp": "^0.33.4",
    "stream-chat": "^8.37.0",
    "stream-chat-react": "^11.23.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zsa": "^0.5.1",
    "zsa-react": "^0.2.2",
    "zsa-react-query": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "supabase": "^1.187.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  }
}
